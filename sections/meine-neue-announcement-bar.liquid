<div class="slide-container {{ section.id }}">

  <!-- Boxen für Desktop Ansicht -->
  <div class="flexbox trust-icons page-width">
    <ul class="trust-icons">
      {% for block in section.blocks %} 
      <li class="flex">&#10003; {{ block.settings.text }}</li>
      {% endfor %}
    </ul>
  </div>

  <!-- Boxen für mobile Ansicht -->
  <div class="carousel">
      <div class="carousel-inner">
        {% for block in section.blocks %} 
        <div class="carousel-item">
          <li class="flex">&#10003; {{ block.settings.text }}</li>
        </div>
        {% endfor %}
      </div>
  </div>
  
</div>
{% schema %}
{
  "name": "Announcement Bar 2.1",
  "class": "shopify-section--announcement-bar",
  "limit" : 1,
  "max_blocks": 5,
  "settings": [
    {
      "type": "header",
      "content": "Colors",
      "info": "Passe hier die Farben für deine Announcement Bar an."
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Text",
      "default": "#000000"
    },
    {
  "type": "range",
  "id": "font-size",
  "min": 10,
  "max": 24,
  "step": 1,
  "unit": "px",
  "label": "Schriftgröße",
  "default": 12
}],
  "blocks": [
     {
       "name": "Text",
       "type": "text",
       "settings": [
         {
           "type": "text",
           "id": "text",
           "label": "Text",
           "default": "Dein Trust Text hier"
         }
       ]
     }
   ],
  "presets": [
    {
      "name": "Announcement Bar 2.1",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "text"
        },
        {
          "type": "text"
        }
        ,{
          "type": "text"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}