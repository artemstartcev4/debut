document.addEventListener("DOMContentLoaded", function() {
  // Text für die Announcement-Bar
  var announcementText = "Dein Text hier";

  // Zeit in Millisekunden, nach der der nächste Text erscheinen soll
  var delayBetweenTexts = 5000;

  // Array mit den Texten für die Announcement-Bar
  var announcementTexts = [
    "Text 1",
    "Text 2",
    "Text 3"
    // Füge hier weitere Texte hinzu, falls benötigt
  ];

  var announcementBar = document.querySelector(".announcement-bar");
  var message = announcementBar.querySelector("p");
  var currentIndex = 0;

  // Funktion zum Anzeigen des nächsten Texts
  function showNextText() {
    message.textContent = announcementTexts[currentIndex];
    currentIndex = (currentIndex + 1) % announcementTexts.length;
    setTimeout(showNextText, delayBetweenTexts);
  }

  // Initialisiere die Anzeige des Texts
  showNextText();

  // CSS-Klasse für die Animation
  announcementBar.classList.add("animate-text");
});